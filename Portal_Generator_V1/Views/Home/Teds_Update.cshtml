
@{
    ViewBag.Title = "Home Page";
}

@section Styles {
    <link href="@Url.Content("~/Content/new.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" type="text/css" />

}


    <div>

        @if (Session["links"].ToString() == "true")
        {
            <script>
                $("#divLoading").hide();
            </script>
        }
        @if (ViewBag.alert == "good")
        {
            <script>
                alert('Se pudo transferir el archivo al folder correctamente.');
            </script>
        }
        else if (ViewBag.alert == "bad")
        {
            <script>
                alert('Error! No se pudo transferir el archivo al folder correcto.');
            </script>
        }

        @if (ViewBag.alertupdate == "good")
        {
            <script>
                alert('Se pudo actulizar los archivos correctamente en la base de datos.');
            </script>
        }
        else if (ViewBag.alertupdate == "bad")
        {
            <script>
                alert('Error! No se pudo actulizar los archivo en la base de datos correctamente.');
            </script>
        }
        <table class="auto-style1" border="0" cellpadding="0" cellspacing="0">

            @*<tr>
                <td bgcolor="Black" colspan="3">&nbsp;</td>
            </tr>*@
            <tr>
                <td bgcolor="#FFEEFF">&nbsp;</td>
                <td width="975">
                    <img alt="" src="@Url.Content("~/Content/Images/TopBannerASSMCA.jpg")" />
                </td>
                <td bgcolor="#FFEEFF">&nbsp;</td>
            </tr>
            <tr>
                <td bgcolor="#FFEEFF">&nbsp;</td>
                <td>
                    <img alt="" class="auto-style2" src="@Url.Content("~/Content/Images/LogoSAMHSACorto.png")" />
                </td>
                <td bgcolor="#FFEEFF">&nbsp;</td>
            </tr>
            <tr>
                <td bgcolor="#FFEEFF">&nbsp;</td>
                <td>

                    @Html.Partial("Page_Teds_to_Seps")
                    @*@Html.ActionLink("Actualizar en sistema SEPS las transacciones aceptadas por TEDS", "UpdateTeds",null, new { onclick = "msg();" })*@
