                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("UpdateTeds","Home")' , msg();">
                            Actualizar
                        </button>
                    </div>
                </td>
                <td bgcolor="#FFEEFF">&nbsp;</td>

            </tr>
            <tr>
                <td bgcolor="#FFEEFF">&nbsp;</td>
            </tr>
            <tr>
                @*@Html.ActionLink("Actualizar en sistema SEPS las transacciones aceptadas por TEDS", "UpdateTeds")*@
            </tr>
            <tr>
                <td bgcolor="#FFEEFF">&nbsp;</td>
                <td bgcolor="Silver">&nbsp;</td>
                <td bgcolor="#FFEEFF">&nbsp;</td>
            </tr>
        </table>


    </div>

