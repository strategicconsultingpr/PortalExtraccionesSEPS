@using Portal_Generator_V1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Comenzar Sesión";
   
}


<div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">INGRESAR</label>
    <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">NO RECUERDO CONTRASEÑA</label>
    <div class="login-form">
        <div class="sign-in-htm">
            <div class="group">
                <label for="user" class="label">Correo Electrónico</label>
                <input id="user" type="text" class="input">
            </div>
            <div class="group">
                <label for="pass" class="label">Contraseña</label>
                <input id="pass" type="password" class="input" data-type="password">
            </div>
            <div class="group">
                <input type="submit" class="button" value="Conectar">
            </div>
            <div class="hr"></div>
        </div>
        <div class="for-pwd-htm">
            <div class="group">
                <label for="user" class="label">Correo Electrónico</label>
                <input id="user" type="text" class="input">
            </div>
            <div class="group">
                <input type="submit" class="button" value="ENVIAR SOLICITUD">
            </div>
            <div class="hr"></div>
        </div>
    </div>
</div>
