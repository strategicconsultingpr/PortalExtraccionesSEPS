@using Portal_Generator_V1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Comenzar Sesión";
   
}

@if (Request.IsAuthenticated)
{

}
else
{

<div class="container small-well margin-top-xlg">
    <div class="well bs-component no-margin-bottom">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-block text-center">
                    <div class="logo-login">
                        <img src="@Url.Content("~/Content/Images/logo-ASSMCAtrans.png")" style="width:40%; height:auto;" alt="" />
                    </div>
                    </div>
                    @*<h1 class="margin-bottom-lg">@ViewBag.Title</h1>*@
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        <div class="margin-bottom-md">
                            <div>
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="margin-bottom-md">
                            <div>
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>


                        <div class="checkbox" style="padding-left:20px;">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </label>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-lg-10">
                                <div class="pull-right">
                                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>*@
                    @* Enable this once you have account confirmation enabled for password reset functionality*@
                    <p>
                        @Html.ActionLink("No recuerdo mi contraseña", "ForgotPassword")
                    </p>
                    }
            </section>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

